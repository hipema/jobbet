{# Plantilla inicial con el listado de los trabajos, antes de sustituirla por los trabajos por categori√≠as #}
{% extends 'base.html.twig' %}

{% block body %}
    {% for category in categories %}
    <h4>{{category.name}}</h4>

    <table class="table text-center">
        <tr>
            <th class="active text-center">City</th>
            <th class="active text-center">Position</th>
            <th class="active text-center">Company</th>
        </tr>

        {% for job in category.activejobs|slice(0,10) %}
            <tr>
                <td>{{ job.location }}</td>
                <td>
                    <a href="{{ path('job.show', {id: job.id}) }}">
                        {{ job.position }}
                    </a>
                </td>
                <td>{{ job.company }}</td>
            </tr>
        {% endfor %}
    </table>
    {% endfor %}
{% endblock %}